   <table id='job_table' class='table table-hover'>

      <%= form_for @jsc, :remote => true do |f| %>
        <tr class='search_row'>
          <td id='category_search'>
            <%= f.select :categories, categories_for_select, {}, {:multiple => true, :size => 5} %>
            <p class='help-block'>Hold CTRL to select multiple</p>
            <%= f.check_box :include_management, :id => 'include_management' %>
            <%= label :include_management, 'Include Management?', :for => 'include_management' %>

          </td>

            <td></td>
              <td></td>
              <td></td>
              <td></td>
              <td></td>

        </tr>


        <tr class='search_toggle_row well'>
          <td colspan='6'>
            <span id='search_options' class='btn btn-primary btn-sm pull-right'>Search Options</span>
            <%= f.submit 'Search', :id => 'search', :class => 'btn btn-primary btn-sm pull-right' %>
          </td>
        </tr>
      <% end %>

    </table>














<script>
    $(document).on('click', '.job_row', function(){
        var id = $(this).attr('id');
        window.location = 'jobs/' + id;
    });

    $(document).on('click', '#search_options', function(){
        $('.search_row').show();
        $('#search_options').hide();
        $('#search').show();
    });

    $(document).on('click', '#search', function(){
        $('.search_row').hide();
        $('#search').hide();
        $('#search_options').show();
    });

    $(document).ready(function(){
        $('.search_row').hide();
        $('#search').hide();
    });

</script>
