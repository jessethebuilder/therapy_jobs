<%= form_for('user', :url => user_session_path) do |f| %>
<%#= form_for(resource, :as => resource_name, :url => user_session_path(resource_name)) do |f| %>
  <div class='form-group'>
    <p class='row'>
      <%= f.label :email %>
      <%= f.email_field :email, :class => 'form-control', :autofocus => true %>
    </p>
    <p class='row'>
      <%= f.label :password %>
      <%= f.password_field :password, :class => 'form-control' %>
    </p>
    <p class='row'>
      <%= f.check_box :remember_me, :class => 'pull-right' %>
      <%= f.label :remember_me, "Remember me&nbsp;".html_safe, :class => 'pull-right' %>
    </p>
    <p class='row'>
      <%= f.submit 'Sign in', :class => 'btn btn-primary pull-right' %>
    </p>

    <p class='row'>

      <%= link_to "Forgot your password?", new_password_path('user'), :class => 'pull-right' %>
    </p>
  </div>
<% end %>
